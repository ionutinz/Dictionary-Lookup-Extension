{
    "manifest_version": 2,
  
    "name": "Caută in dicționar",
    "description": "Caută definiția cuvântului selectat pe dexonline.ro",
    "version": "1.0",
    "background": {
        "scripts": ["functions.js"],
        "persistent": false
    },
  
    "browser_action": {
     "default_icon": "search.png"
    },
    "icons": { 
        "16": "16x16.png",
        "48": "48x48.png",
       "128": "search.png" 
    },
    "permissions": [
     "activeTab",
     "tabs",
     "contextMenus"
     ]
  }